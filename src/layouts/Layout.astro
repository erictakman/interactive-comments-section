---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="./images/favicon-32x32.png"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap"
			rel="stylesheet"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	@font-face {
		font-family: "Rubik";
		src: url("https://fonts.google.com/specimen/Rubik");
	}

	:root {
		--color-moderate-blue: hsl(238, 40%, 52%);
		--color-soft-red: hsl(358, 79%, 66%);
		--color-light-grayish-blue: hsl(239, 57%, 85%);
		--color-pale-red: hsl(357, 100%, 86%);

		--color-dark-blue: hsl(212, 24%, 26%);
		--color-grayish-blue: hsl(211, 10%, 45%);
		--color-light-gray: hsl(223, 19%, 93%);
		--color-very-light-gray: hsl(228, 33%, 97%);
		--color-white: hsl(0, 0%, 100%);

		--font-size: 16px;
	}

	body,
	html {
		font-family: "Rubik", sans-serif;
		font-size: var(--font-size);
		background-color: var(--color-very-light-gray);
	}

	main,
	.comment,
	.score,
	.comment-body,
	.comment-header,
	.comment-about {
		display: flex;
	}

	main {
		height: 100vh;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.comment {
		background-color: var(--color-white);
		border-radius: 10px;
		padding: 1.5rem;
	}

	.score {
		flex-direction: column;
		align-items: center;
	}

	.score-button {
		border: none;
		cursor: pointer;
		fill: var(--color-light-gray);
	}

	.score-button:hover {
		fill: var(--color-moderate-blue);
	}

	.comment-header {
		align-items: space-between;
	}

	.comment-about {
		gap: 1rem;
	}

	.comment-user-image {
		width: 2rem;
		height: 2rem;
	}

	.comment-username {
		font-weight: 700;
		color: var(--color-dark-blue);
	}

	.reply-user-image {
		width: 1.5rem;
	}

	.comment-content,
	.reply-content {
		padding: 1rem;
		border: 1px solid var(--color-light-gray);
		border-radius: 1rem;
	}

	button {
		background-color: var(--color-moderate-blue);
		color: var(--color-white);
		border: none;
		border-radius: 1rem;
		padding: 1rem 2rem;
		font-size: 1.5rem;
		font-weight: 500;
		cursor: pointer;
	}

	button:hover {
		background-color: var(--color-light-grayish-blue);
	}

	.icon-button {
		background-color: transparent;
		color: var(--color-moderate-blue);
		border: none;
		cursor: pointer;
	}

	.icon-button:hover {
		color: var(--color-light-grayish-blue);
	}

	@media screen and (max-width: 375px) {
	}

	@media screen and (max-width: 1440px) {
	}
</style>
